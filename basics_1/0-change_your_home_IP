#!/usr/bin/env bash
# This script changes localhost to 127.0.0.2 and facebook.com to 8.8.8.8 in /etc/hosts

# Exit if not run as root
if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

# Backup /etc/hosts if it doesn't already exist
[ ! -f /etc/hosts.bak ] && cp /etc/hosts /etc/hosts.bak

# Remove any previous entries for localhost or facebook.com
sed -i '/localhost/d' /etc/hosts
sed -i '/facebook\.com/d' /etc/hosts

# Add new entries
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts